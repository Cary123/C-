<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="Entry" namespace="Entry.model" default-lazy="true">
  <class name="Product" table="Product">
    <id name="ProductId">
      <column name="ProductId"  not-null="true"/>
      <generator class="uuid.hex"/>
    </id>
    <property name="Name" column="Name"  not-null="true"/>
    <property name="Version" column="Version" not-null="true" />
    <property name="Price"   column="Price"   />
    <set name="Orders" table="OrderProduct">
      <key column="ProductId"></key>
      <many-to-many column="OrderId" class="Order"></many-to-many>
    </set>
  </class>
</hibernate-mapping>